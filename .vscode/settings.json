{
  // --- Tailwind CSS support ---
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "javascript": "javascript",
    "typescript": "typescript",
    "typescriptreact": "typescript"
  },
  "tailwindCSS.experimental.classRegex": [
    "tw`([^`]*)",
    "tw=\"([^\"]*)",
    "tw={\"([^\"]*)",
    "tw\\.\\w+`([^`]*)",
    "tw\\(.*?\\)`([^`]*)"
  ],

  // --- Editor experience ---
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Appliquer les corrections ESLint/Prettier à la sauvegarde
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit"
  },

  // --- Désactiver les validations CSS conflictuelles avec Tailwind ---
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,

  // --- ESLint & TypeScript validation ---
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "typescript.validate.enable": true,
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,

  // --- Affichage des erreurs dans l’explorateur VS Code ---
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,
  "explorer.decorations.badges": true,
  "explorer.decorations.colors": true,

  // --- Error Lens (affichage des erreurs directement dans le code) ---
  "errorLens.enabled": true,
  "errorLens.fontWeight": "500",
  "errorLens.fontStyleItalic": false,
  "errorLens.messageBackgroundMode": "line",
  "errorLens.followCursor": "closestProblem",
  "errorLens.gutterIconsEnabled": true,
  "errorLens.gutterIconSet": "circle",
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "errorLens.excludeByMessage": ["hint"],

  // --- Prettier configuration ---
  "prettier.requireConfig": true,
  "prettier.printWidth": 100,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.semi": false,
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,

  // --- Task runner ---
  "task.problemMatchers.neverPrompt": false
}
